        $("#saveTeacher")
            .validate({
                rules: {
                    name: "required",
                    address: "required",
                    contactNo: "required",
                    DesignationId: "required",
                    DepartmentId: "required",
                    credit: {
                        min:0
                    }
                }
            });

    </script>*@


</body>

</html>
